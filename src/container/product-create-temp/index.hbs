{{! 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 }}
<main class='main'>

  <section>
    <div class='form'>
      <h1 class='form__title'>Створення товару</h1>
      <form
        class='form__card'
        method='POST'
        action='/product-create'
      >
        <h2>Інформація про товар</h2>
        <div class='form__content'>
          <div class='form__namePrice'>
            <div class='form__field'>
              <label for='name' class='form__label'>Назва
                товару</label>
              {{> capFirstLetter}}
              <input
                type='text'
                name='name'
                class='form__input form__name'
                value='{{product.name}}'
                oninput='capitalizeFirstLetter(this)'
                placeholder='Введіть назву товару'
              />
            </div>
            <div class='form__field'>
              <label for='price' class='form__label'>Ціна
              </label>
              <input
                type='number'
                name='price'
                class='form__input form__price'
                value='{{product.price}}'
                oninput="validity.valid||(value='');"
                placeholder='Введіть ціну'
              />
            </div>
          </div>
          <div class='form__field'>
            <label
              for='description'
              class='form__label'
            >Короткий опис продукту</label>
            {{> capFirstLetter}}
            <textarea
              type='text'
              name='description'
              class='form__input form__description'
              oninput='capitalizeFirstLetter(this)'>{{product.description}}</textarea>
            <label
              for='description'
              class='form__labelSmall'
            >Відображується у картці товару</label>
          </div>
          <button class='form__button'>Створити товар</button>
        </div>
      </form>
    </div>
  </section>

</main>

